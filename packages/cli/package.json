{
	"name": "skilluse",
	"version": "0.1.6",
	"description": "CLI tool for managing and installing AI Coding Agent Skills",
	"main": "dist/index.js",
	"bin": {
		"skilluse": "./dist/index.js"
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skilluse/skilluse.git",
		"directory": "packages/cli"
	},
	"homepage": "https://github.com/skilluse/skilluse",
	"bugs": {
		"url": "https://github.com/skilluse/skilluse/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "bun --watch src/index.tsx",
		"build": "bun build src/index.tsx --outdir dist --target node --define 'process.env.DEV=\"false\"'",
		"build:bin": "bun build src/cli.tsx --compile --minify --sourcemap --define 'process.env.DEV=\"false\"' --outfile dist/skilluse",
		"build:all": "bun run scripts/build-all.ts",
		"typecheck": "tsc --noEmit",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check .",
		"start": "bun dist/index.js",
		"prepublishOnly": "bun run build"
	},
	"keywords": [
		"cli",
		"skills",
		"claude-code",
		"codex",
		"ai-agent"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"conf": "^15.0.2",
		"env-paths": "^3.0.0",
		"figures": "^6.1.0",
		"ink": "^6.6.0",
		"ink-select-input": "^6.2.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^6.0.0",
		"pastel": "^4.0.0",
		"react": "^19.0.0",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/node": "^22.10.2",
		"@types/react": "^19.0.0",
		"react-devtools-core": "^7.0.1",
		"typescript": "^5.7.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"type": "module"
}
